#!/bin/sh

set -e

home=$(dirname $0)/..
home=$(cd $home && env - pwd)
cd $home

$home/bin/generate sys.h

mkdir -p $HOME/inc
cp -f *.h $HOME/inc

for file in *.[cs]
do
	case ${file##*.} in
	(c)
		$home/bin/compile $file
		;;
	(s)
		$home/bin/assemble $file
		;;
	esac
done

$home/bin/makelib libsys.a *.o

mkdir -p $HOME/lib
cp -f libsys.a $HOME/lib
