@ECHO OFF
SETLOCAL
SET BASE=%~DP0\..
CHDIR /D %BASE%
SET MAIN=%~1
SHIFT
SET ARGS=
:LOOP
SET ARGS=%ARGS% %~1
SHIFT
IF "%~1" NEQ "" GOTO:LOOP
sh %MAIN%.sh >%MAIN%.new
IF ERRORLEVEL 1 EXIT /B %ERRORLEVEL%
cmp -s %MAIN%.new %MAIN% || MOVE /Y %MAIN%.new %MAIN%
IF ERRORLEVEL 1 EXIT /B %ERRORLEVEL%
DEL /F /Q %MAIN%.new >NUL 2>NUL
ENDLOCAL
