#!/bin/sh

set -e

home=$(dirname $0)/..
home=$(cd $home && env - pwd)
cd $home

bin=$HOME/bin
mkdir -p $bin

kind=$1
main=$2
[[ $kind = asm ]] && file=$main.s || file=$main.$kind
shift 2

[[ -e $home/bin/load-$kind ]] || kind=script

$home/bin/load-$kind $main $file "$@"

src=$main
dst=$bin/$main

rm -f $dst{new}
cp -f $src $dst{new}
chmod 0555 $dst{new}
mv -f $dst{new} $dst
rm -f $src
